{
  "name": "@accesslint/mcp-server",
  "version": "0.1.0",
  "description": "MCP server providing accessibility analysis tools for WCAG compliance",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:bundle && npm run build:types",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "build:types": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "a11y",
    "contrast",
    "mcp"
  ],
  "author": "AccessLint",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.11",
    "typescript": "^5.7.2"
  }
}
